# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.box = "centos/7"

  config.vm.provider :libvirt do |libvirt|
    libvirt.cpus = 2
    libvirt.memory = 4096
  end

  config.vm.provision "shell", inline: <<-SHELL
       yum clean all
       rm -rf /var/cache/yum
       yum makecache fast
       yum update -y
  SHELL

end
