[Unit]
Description=Podman service for {{ ul_fhirbase_service_name }}
After=network.target

[Service]
Type=simple

User={{ ul_fhirbase_user }}
Group={{ ul_fhirbase_group }}

# Take no chances, force a stop and remove before starting.
# NOTE: In podman v1.6 there's no --ignore switches for «stop» and «rm»
ExecStartPre=-/usr/bin/podman stop --time {{ ul_fhirbase_container_stop_timeout }} {{ ul_fhirbase_service_name }}
ExecStartPre=-/usr/bin/podman rm --force {{ ul_fhirbase_service_name }}
ExecStartPre=-/usr/bin/rm -f {{ ul_fhirbase_container_pidfile }} {{ ul_fhirbase_container_cidfile }}
ExecStartPre=-/usr/bin/pkill -u {{ ul_fhirbase_user }} --signal 15
ExecStartPre=-/usr/bin/sleep 5
ExecStartPre=-/usr/bin/pkill -u {{ ul_fhirbase_user }} --signal 9
ExecStartPre=/bin/mkdir -p /tmp/%n.tmp

ExecStart=/usr/bin/podman run --name {{ ul_fhirbase_service_name }} \
  --conmon-pidfile {{ ul_fhirbase_container_pidfile }} \
  --cidfile {{ ul_fhirbase_container_cidfile }} \
  --env-file /etc/default/{{ ul_fhirbase_service_name }} \
  --log-driver journald \
  --network host \
  --publish {{ ul_fhirbase_port }}:3000 \
  --volume /tmp/%n.tmp:/tmp:z \
  --rm --detach \
  {{ ul_fhirbase_image_repo }}/{{ ul_fhirbase_image_name }}:{{ ul_fhirbase_image_tag }}

# Stop and remove
# NOTE: In podman v1.6 there's no --ignore switches for «stop» and «rm»
ExecStop=-/usr/bin/podman stop --time {{ ul_fhirbase_container_stop_timeout }} {{ ul_fhirbase_service_name }}
ExecStop=-/usr/bin/podman rm --force {{ ul_fhirbase_service_name }}
ExecStop=-/usr/bin/pkill -u {{ ul_fhirbase_user }} --signal 15
ExecStop=-/usr/bin/sleep 5
ExecStop=-/usr/bin/pkill -u {{ ul_fhirbase_user }} --signal 9

Restart=on-failure
RestartSec={{ ul_fhirbase_systemd_restart_sec }}
TimeoutStartSec={{ ul_fhirbase_systemd_timeout_start_sec }}

KillMode=none
PIDFile={{ ul_fhirbase_container_pidfile }}

[Install]
WantedBy=multi-user.target
