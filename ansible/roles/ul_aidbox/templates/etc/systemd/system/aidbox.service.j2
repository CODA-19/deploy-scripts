# The purpose of this systemd WU is to run the Ansible playbook for AidBoxDB
# at system startup without waiting after crond to be awake.

[Unit]
Description=AidBox One (AidBox REST API)
Wants=network.target
After=network-online.target

[Service]
ExecStart=/usr/local/sbin/aidbox_podman_wrapper.sh
KillMode=none
Type=oneshot
TimeoutSec={{ ul_aidbox_wu_timeout }}

[Install]
WantedBy=multi-user.target
